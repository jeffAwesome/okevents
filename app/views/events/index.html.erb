<div class="row-fluid">
    <% @events.each_with_index do |event, index| %>
      <% if index == 0 %>
        <div class="span12 large-scale clearfix" style="background-image: <%= event.photo %>">
      <% else %>
        <div class="span3" style="background-image: <%= event.photo %>">
      <% end %>
        <%= link_to event do %>
          <%= event.title %>
          <%= event.location %>
          <%= event.date.strftime("%m/%d/%y") %>
          <%= event.description %>
          <%= event.website %>
          <% link_to 'Edit', edit_event_path(event) %>
          <% link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    <% end %>
</div>

<%= link_to 'New Event', new_event_path %>
