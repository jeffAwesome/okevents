<style type="text/css">
  body {
    background: transparent url(<%= @event.photo %>) no-repeat 0 0 fixed;
    background-size: 100% 100%;
    min-height: 100%;
    height: 100%;
  }
</style>


<div class="event">
  <h2 class="eventTitle"> <%= @event.title %> </h2>
  <div class="event-date">
    <%= @event.event_month @event.date.month %>
    <%= @event.date.day %>
    <%= @event.date.year %>
    <% if @event.time %>
      / <%= @event.time %>
    <% end %>
  </div><!--//event-date-->

  <ul class="social-icon">
    <li><a href="#">Add to Bookmark</a></li>
    <li><a href="#">Share to Faceboo</a></li>
    <li><a href="#">Share to Twitter</a></li>
  </ul>

  <div class="event-description">
    <%= @event.description %>
    <% if @event.website %>
      <%= @event.website %>
    <% end %>
  </div><!--//event-description-->


</div><!--//event-->


<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date.strftime("%m/%d/%y") %>
</p>




<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
